<center>
  <h1>Bienvenido a Usuarios con Bitly!</h1>
  <hr>
  <% if @error %>
  <h2 style="color:red"><%= @error %></h2>
  <% end %>
  <h3>Iniciar sesion</h3>
    <form method="post" action="/user_session">
      <input type="email" name="email" placeholder="Email"><br><br>
      <input type="password" name="pass" placeholder="Constraseña" maxlength="10"><br><br>
      <input type="submit" value="Iniciar Sesión" class="boton">
    </form>
  <br>
  <hr>
  <br>

  <div style="float: left;">
    <a href="/new_user" class="boton">Registrarse</a>
  </div>

  <br>
  <br>
    <form method="post" action="/urls/public">
      <input type="text" name="long_url" placeholder="Introduce tu Url">
  <br>
  <br>
      <input type="submit" value="Reduce tu Url" class="boton">
    </form>
  <br>
  <br>
  <% if @error_2 %>
  <h5 style="color:red"><%= @error_2 %></h5>
  <% end %>
  <table style="width: 100%" border="1">
  <tr>
    <th><h4>URL::Original</h4></th>
    <th><h4>URL::Short</h4></th>
    <th><h4>URL::Clicks</h4></th>
  </tr>

  <tr>
 <% @urls.each do |x| %>
    <td><a href="<%= x.long_url %>"><%= x.long_url %></a></td>
    <td><a href="/<%= x.short_url[-6, 6] %>"><%= x.short_url %></a></td>
    <td><%= x.click_count %></td>
  </tr>
 <% end%>

</table>
</center>